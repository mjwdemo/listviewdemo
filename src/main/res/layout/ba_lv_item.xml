<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ba_lv_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ba_lv_item_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ba_lv_item_iv"
        android:layout_toRightOf="@+id/ba_lv_item_iv"
        android:text="TextView" />

    <TextView
        android:id="@+id/ba_lv_item_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ba_lv_item_username_tv"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/ba_lv_item_iv"
        android:layout_toRightOf="@+id/ba_lv_item_iv"
        android:text="TextView" />
</RelativeLayout>
